<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:padding="4dp"
              android:layout_width="300dp"
              android:layout_height="390dp">

    <ImageView
        android:layout_below="@+id/upright"
        android:layout_marginBottom="4dp"
        android:padding="8dp"
        android:id="@+id/image_editor_view"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <com.graspery.www.wordcountpro.NormalTextView
        android:id="@+id/upright"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:background="@drawable/circular_button"
        android:text="Must be Upright Positioned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_below="@+id/image_editor_view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/circular_button"
            android:src="@drawable/vector_drawable_rotate"
            android:id="@+id/rotate_left"
            android:layout_alignParentStart="true"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <Button
            android:textColor="@android:color/white"
            android:background="@drawable/circular_button"
            android:id="@+id/upload_and_scan"
            android:layout_centerInParent="true"
            android:text="Scan"
            android:layout_width="100dp"
            android:layout_height="40dp"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/circular_button"
            android:src="@drawable/vector_drawable_rotate_left"
            android:id="@+id/rotate_right"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </RelativeLayout>

</RelativeLayout>