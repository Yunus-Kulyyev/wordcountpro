<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        app:cardBackgroundColor="@color/colorBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <GridLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/char_t"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="@string/characters"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/word_t"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="@string/words"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sent_t"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="@string/sentences"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/par_t"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="@string/paragraphs"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/characters_text"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/words_text"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/sentences_text"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/paragraphs_text"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="0" />
            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grid"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/circular_frame">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/input_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/enter"
                            android:paddingStart="18dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/clear_button"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:background="@drawable/clear"
                            android:visibility="gone" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/scan_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:layout_weight="0"
                        android:background="@drawable/button_frame"
                        android:text="@string/scan"
                        android:textColor="@color/colorBackground" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/empty_circular_frame">

                    <ImageButton
                        android:id="@+id/camera_button"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@drawable/circular_button"
                        android:src="@drawable/camera" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/empty_circular_frame">

                    <ImageButton
                        android:id="@+id/upload_button"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@drawable/circular_button"
                        android:src="@drawable/upload_icon_white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/main_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:padding="8dp">

            <!--<LinearLayout
                android:id="@+id/sign_in_message_box"
                android:layout_marginBottom="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/sign_in_main_menu"
                    android:textStyle="bold"
                    android:elevation="8dp"
                    android:textColor="@android:color/white"
                    android:text="Sign In to get more insights"
                    android:background="@drawable/circular_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.graspery.www.wordcountpro.NormalTextView
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="Get even more usefull statistics for free when you sign up\n
Get Sentiment Analysis, List of Entities with WikiLink, and in the upcoming update you will get detailed Syntax breakdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>-->

            <LinearLayout
                android:id="@+id/linear_analysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/analysis_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="@string/analysis"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/an_char"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:text="@string/total_character_count"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total_char_count"
                        android:layout_row="0"
                        android:layout_column="1" />

                    <TextView
                        android:id="@+id/an_white"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:text="@string/total_whitespace_count"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total_white_count"
                        android:layout_row="1"
                        android:layout_column="1" />

                    <TextView
                        android:id="@+id/an_word"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:text="@string/total_word_count"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total_word_count"
                        android:layout_row="2"
                        android:layout_column="1" />

                    <TextView
                        android:id="@+id/an_sent"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:text="@string/total_sentence_count"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total_sentence_count"
                        android:layout_row="3"
                        android:layout_column="1" />

                    <TextView
                        android:id="@+id/an_par"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:text="@string/total_paragraph_count"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total_paragraph_count"
                        android:layout_row="4"
                        android:layout_column="1" />

                    <TextView
                        android:id="@+id/an_diff"
                        android:layout_row="5"
                        android:layout_column="0"
                        android:text="@string/number_different_words"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/different_words"
                        android:layout_row="5"
                        android:layout_column="1" />

                    <TextView
                        android:id="@+id/an_var"
                        android:layout_row="6"
                        android:layout_column="0"
                        android:text="@string/word_variety_ratio"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/complexity"
                        android:layout_row="6"
                        android:layout_column="1" />

                    <TextView
                        android:id="@+id/an_read"
                        android:layout_row="7"
                        android:layout_column="0"
                        android:text="@string/readability"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/readability"
                        android:layout_row="7"
                        android:layout_column="1" />

                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_rest_analysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">


                <LinearLayout
                    android:id="@+id/sentence_and_speed_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/longes_word"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/longest_sentence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/reading_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="@string/reading_speed"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <GridLayout
                    android:id="@+id/reading_speed_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/an_adult"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:text="@string/average_adult"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/average_adult"
                        android:layout_row="0"
                        android:layout_column="1" />

                    <TextView
                        android:id="@+id/an_student"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:text="@string/college_level"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/college_student"
                        android:layout_row="1"
                        android:layout_column="1" />

                    <TextView
                        android:id="@+id/an_pro"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:text="@string/professional_speaker"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/speaker"
                        android:layout_row="2"
                        android:layout_column="1" />

                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/custom_speed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/custom_speed" />

                        <TextView
                            android:id="@+id/custom_speed_numbers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="16dp"
                            android:text="200 wps" />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/speed_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="1000"
                        android:min="1"
                        android:thumbTint="#4a148c" />

                    <TextView
                        android:id="@+id/custom_speed_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/sentiment_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/sentiment_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/sentiment"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/sentiment_bar"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:max="100"
                            android:padding="8dp"
                            android:progress="70"
                            android:progressBackgroundTint="#E5E5E5"
                            android:progressTint="@color/colorGreen" />

                        <com.graspery.www.wordcountpro.BoldTextView
                            android:id="@+id/progress_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="8dp"
                            android:shadowColor="@android:color/black"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="2"
                            android:text="70"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/sentiment_explanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/sentiment_expl" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/entities_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <View
                        android:id="@+id/entity_border"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/darker_gray" />


                    <TextView
                        android:id="@+id/entities_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/entity_border"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/entities_list"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <ListView
                        android:id="@+id/entity_listview"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:layout_below="@+id/entities_title"
                        android:fadeScrollbars="false"
                        android:padding="8dp" />

                    <ProgressBar
                        android:id="@+id/entity_loading_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/top_occured_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/occurence_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/occurence_title"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <GridLayout
                        android:id="@+id/details_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp" />

                </LinearLayout>

                <!--<View
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>-->

                <RelativeLayout
                    android:id="@+id/syntax_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/syntax_border"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/darker_gray" />


                    <TextView
                        android:id="@+id/syntax_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/syntax_border"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/syntax_title"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/syntax_explanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/syntax_title"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/syntax_expl"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:visibility="visible" />


                    <LinearLayout
                        android:id="@+id/page_changer"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/syntax_explanation"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <ImageButton
                            android:id="@+id/previous_page_button"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/arrow" />

                        <TextView
                            android:id="@+id/page_number_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:text="3/4"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/next_page_button"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:rotation="180"
                            android:src="@drawable/arrow" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/syntax_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/page_changer" />

                    <ProgressBar
                        android:id="@+id/syntax_loading_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/word_length_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/word_length_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/word_length"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <GridLayout
                        android:id="@+id/word_length_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/darker_gray" />


                <LinearLayout
                    android:id="@+id/chart_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/distr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/length_distribution"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/recommendation_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="@string/recommendation"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/recom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/the_rest_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/overview_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/overview_title"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/frequency_help"
                        android:textColor="#4cd964"
                        android:textStyle="italic" />

                    <LinearLayout
                        android:weightSum="6"
                        android:padding="8dp"
                        android:id="@+id/suggestion_linear_holder"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:id="@+id/overview_relative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <com.graspery.www.wordcountpro.NormalTextView
                            android:layout_above="@+id/editor_divider"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:text="Editor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_marginTop="4dp"
                            android:layout_below="@+id/speak_button"
                            android:id="@+id/editor_divider"
                            android:background="@android:color/darker_gray"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <Button
                            android:id="@+id/copy_button"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/copy_clipboard" />

                        <Button
                            android:id="@+id/speak_button"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="8dp"
                            android:layout_toLeftOf="@+id/copy_button"
                            android:background="@drawable/speak_button" />

                        <EditText
                            android:id="@+id/text_display"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/editor_divider"
                            android:layout_marginTop="8dp"
                            android:background="@null"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/image_view"
                        android:layout_width="match_parent"
                        android:layout_height="450dp"
                        android:background="@drawable/square_frame"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/disclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parent"
        android:layout_alignTop="@+id/scroll_view"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="monospace"
        android:text="@string/disclaimer"
        android:textColor="#D5D5D5"
        android:textSize="16sp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_float_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:src="@drawable/floppy"
        app:fabSize="mini" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settings_float_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:src="@drawable/settings_white"
        app:fabSize="mini" />


</RelativeLayout>